@model Web_UI.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}
<style>
    .login-container {
        margin-top: -50px; 
    }
</style>

<div class="container d-flex justify-content-center align-items-center login-container vh-100">
    <div class="card shadow-lg border-0 p-4 rounded-4" style="width: 400px;">
        <div class="text-center">
            <h2 class="fw-bold text-primary">Login</h2>
            <p class="text-muted">Sign in to your account</p>
        </div>
        <hr />

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

            <!-- Email Input -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold text-secondary"></label>
                <input asp-for="Email" class="form-control border-primary shadow-sm" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Password Input -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold text-secondary"></label>
                <input asp-for="Password" type="password" class="form-control border-primary shadow-sm" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary fw-bold shadow">Login</button>
            </div>
        </form>

        <!-- Back to List Link -->
        <div class="text-center mt-3">
            <a asp-action="Index" asp-controller="Account" class="text-decoration-none text-primary fw-bold">← Back to Home</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
