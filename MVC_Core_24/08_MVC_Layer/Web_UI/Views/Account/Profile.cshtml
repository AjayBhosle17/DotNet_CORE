@model Models.UserModel

@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3>User Profile</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Profile Picture Placeholder -->
                <div class="col-md-4 text-center">
                    <img src="https://via.placeholder.com/150" class="rounded-circle img-fluid" alt="User Image">
                </div>

                <!-- User Details -->
                <div class="col-md-8">
                    <table class="table table-striped table-bordered">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <td>@Model.Id</td>
                            </tr>
                            <tr>
                                <th>First Name</th>
                                <td>@Model.FirstName</td>
                            </tr>
                            <tr>
                                <th>Last Name</th>
                                <td>@Model.LastName</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Confirm Email</th>
                                <td>@Model.ConfirmEmail</td>
                            </tr>
                            <tr>
                                <th>Role</th>
                                <td>@Model.RoleName</td>
                            </tr>
                            <tr>
                                <th>Age</th>
                                <td>@Model.Age</td>
                            </tr>
                            <tr>
                                <th>Date of Birth</th>
                                <td>@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "Not Provided")</td>
                            </tr>
                            <tr>
                                <th>Facebook</th>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.FacebookUrl))
                                    {
                                        <a href="@Model.FacebookUrl" target="_blank" class="btn btn-info btn-sm">
                                            <i class="fab fa-facebook"></i> Visit Profile
                                        </a>
                                    }
                                    else
                                    {
                                        <span>Not Provided</span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Buttons -->
            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Account")" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Back To Login
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                    <i class="fas fa-home"></i> Home
                </a>
                <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </div>
</div>

<!-- FontAwesome for Icons -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
