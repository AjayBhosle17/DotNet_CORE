<h2> Category Index View  Page</h2>

<a asp-action="Edit" asp-controller="Category">Edit Page</a>

<form asp-action="Details" asp-controller="Category" method="get" >

	<input type="hidden"  name="Age" value="24"/>

	<div class="form-group">
		<label class="form-label">Name</label>
		<input type="text" name="Name" class="form-control"/>
	</div>

	<div class="form-group mt-3">

		<label class="form-label">Email</label>
		<input type="email" name="Email" class="form-control"/>

	</div>



	<div class="form-group mt-3">

		<input type="submit" value="Click Me" class="btn btn-primary"/>
	</div>

</form>

<p>Name is : @TempData["ab"]</p>